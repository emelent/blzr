@using BlzrHstWasm.Shared.ViewModels
@using BlzrHstWasm.Client.StateContainers;
@inject OverlayStateContainer overlayState;

<div>
    <h5>@Word</h5>
    I am a component
    <div>
        <button @onclick="onClick">
            Clicker
        </button>
    </div>
</div>
@code {

    [Parameter]
    public string Word { get; set; }

    private void onClick(MouseEventArgs eventArgs){
        overlayState.SetActive(!overlayState.Active);
    }



    protected override void OnInitialized()
    {
        Console.WriteLine("SomeComponent::Initialized()");
    }
    protected override void OnAfterRender(bool firstRender)
    {
        if (firstRender)
            return;

        Console.WriteLine("SomeComponent::OnAfterRender()");
    }

}